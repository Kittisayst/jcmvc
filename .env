# Application
APP_NAME=JC MVC
APP_ENV=local
APP_KEY=base64:your-secret-key-here
APP_DEBUG=true
APP_URL=http://localhost
APP_BASEPATH=jcmvc
APP_TIMEZONE=Asia/Vientiane
APP_LOCALE=lo

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=computer_room_management
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_PATH=/
SESSION_DOMAIN=localhost

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=jcmvc_
CACHE_TTL=3600

# Security
ENCRYPTION_KEY=your-encryption-key-here
CSRF_LIFETIME=7200
PASSWORD_TIMEOUT=10800

# Mail
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=uploads

# Logging
LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_MAX_FILES=30
LOG_PATH=logs

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_IPS=127.0.0.1

# Admin
ADMIN_PATH=admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password-here
ADMIN_EMAIL=admin@example.com

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_TTL=60
JWT_REFRESH_TTL=20160

# API
API_PREFIX=api
API_VERSION=v1
API_DEBUG=true
API_THROTTLE=60,1

# Social Login
GOOGLE_CLIENT_ID=null
GOOGLE_CLIENT_SECRET=null
GOOGLE_REDIRECT=null

FACEBOOK_CLIENT_ID=null
FACEBOOK_CLIENT_SECRET=null
FACEBOOK_REDIRECT=null

# Custom
DEFAULT_ITEMS_PER_PAGE=10
DEFAULT_LANGUAGE=lo
DEFAULT_CURRENCY=LAK
COMPANY_NAME="Your Company Name"
COMPANY_ADDRESS="Your Company Address"
COMPANY_PHONE="+856 20 XX XXX XXX"
COMPANY_EMAIL="info@example.com"